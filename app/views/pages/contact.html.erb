<div class="mx-auto" style="width: 600px;">
  <h1>Contact Us</h1>

  <%= form_for :contact do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">  
      <%= f.label :message %>
      <%= f.text_area :message, class: 'form-control' %>  
    </div>
    
    <%= f.submit :Submit, class: 'btn btn-primary' %>
  <% end %>
</div>