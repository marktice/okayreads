<h1>Edit Book</h1>

<%= form_for @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.submit %>
  
<% end %>